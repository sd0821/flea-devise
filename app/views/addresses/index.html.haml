.Address-Content
  %section.Address-Content-Chapter-Container
    %h2.Address-Content-Chapter-Head 発送元・お届け先住所登録
    %form.Address-Content-Single-Inner.Address-Content-Registration-Form{action: "#", method: "#",}
      %input{type: "hidden", name: "user_id", value: "#"}/
      .Address-Content-Single-Content
        .Form-Group
          %label{for: "name"} お名前
          %span.Form-Require 必須
          %input{type: "text", name: "family_name", placeholder: "例) 渦巻", class: "Input-Default", value: ""}/
          %input{type: "text", name: "first_name", placeholder: "例) 鳴門", class: "Input-Default", value: ""}/
        .Form-Group
          %label{for: "name"} お名前カナ
          %span.Form-Require 必須
          %input{type: "text", name: "family_name_kana", placeholder: "例) ウズマキ", class: "Input-Default", value: ""}/
          %input{type: "text", name: "first_name_kana", placeholder: "例) ナルト", class: "Input-Default", value: ""}/
        .Form-Group
          %label{for: "zip_code1"} 郵便番号
          %span.Form-Require 必須
          %input{type: "text", name: "zip_code1", placeholder: "例) 123-4567", class: "Input-Default", maxlength: "8", pattern: "\\d{3}-\\d{4}", value: ""}/
        .Form-Group
          %label{for: "prefecture"} 都道府県
          %span.Form-Require  必須
          .Select-Wrap
            %i.Icon-Arrow-Bottom
            %select.Select-Default{name: "prefecture"}
              %option{value: "北海道"} 北海道
              %option{value: "青森県"} 青森県
              %option{value: "岩手県"} 岩手県
              %option{value: "宮城県"} 宮城県
