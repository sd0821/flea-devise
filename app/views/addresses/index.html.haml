          %span.Form-Require 必須
          %input{type: "text", name: "city", placeholder: "例) 横浜市旭区二俣川", class: "Input-Default", value: ""}/
        .Form-Group
          %label{for: "address1_label"} 番地
          %span.Form-Require 必須
          %input{type: "text", name: "address1", placeholder: "例) 1-1", class: "Input-Default",  value: ""}/
        .Form-Group
          %label{for: "address2_label"} 建物名
          %span.Form-Arbitrary 任意
          %input{name: "address2", placeholder: "例) ライオンズマンション", type: "text", class: "Input-Default", value: ""}/
        .Form-Group
          %label{for: "address2_label"} 電話
          %span.Form-Arbitrary 任意
          %input{type: "number", name: "telephone", placeholder: "例) 1234567890", class: "Input-Default", value: ""}/
        %input{type: "hidden", name: "deliver_address_id", value: ""}/
        %input{type: "hidden", name: "after_save_callback", value: ""}/
