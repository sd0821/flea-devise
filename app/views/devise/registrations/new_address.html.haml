.Address-Content
  %section.Address-Content-Chapter-Container
    %h2.Address-Content-Chapter-Head 発送元・お届け先住所登録
    = form_with model: @address, url: addresses_path, id: 'new_address', class: 'Address-Content-Single-Inner Address-Content-Registration-Form', local: true do |f|
      = render "devise/shared/error_messages", resource: @address
      .Address-Content-Single-Content
        .Form-Group
          = f.label "name", "お名前"
          %span.Form-Require 必須
          = f.text_field "destination_family_name", placeholder: "例) 渦巻", class: "Input-Default", value: ""
          = f.text_field "destination_first_name", placeholder: "例) 鳴門", class: "Input-Default", value: ""
        .Form-Group
          = f.label "name", "お名前カナ"
          %span.Form-Require 必須
          = f.text_field "destination_family_name_furigana", placeholder: "例) ウズマキ", class: "Input-Default", value: ""
          = f.text_field "destination_first_name_furigana", placeholder: "例) ナルト", class: "Input-Default", value: ""
        .Form-Group
          = f.label "zip_code1", "郵便番号"
          %span.Form-Require 必須
          = f.text_field "postal_code", placeholder: "例) 123-4567", class: "Input-Default", maxlength: "8", pattern: "\\d{3}-\\d{4}", value: ""
        .Form-Group
          = f.label "prefecture", "都道府県"
          %span.Form-Require  必須
          .Select-Wrap
            %i.Icon-Arrow-Bottom
            = f.collection_select "prefectures_area", Prefecture.all, :id, :name, {prompt:"選択してください"}, {class:"Select-Default"}
